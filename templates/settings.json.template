{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(docker-compose*)",
      "Bash(docker logs*)",
      "Bash(npm*)",
      "Bash(npx*)",
      "Bash(cargo*)",
      "Bash(curl*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(mkdir*)",
      "Bash(cp*)",
      "Bash(mv*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "TodoRead",
      "TodoWrite",
      "WebFetch"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/load-context.ps1"
      }
    ]
  }
}
